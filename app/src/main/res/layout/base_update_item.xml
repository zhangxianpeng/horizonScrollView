<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/qb_px_216"
    android:layout_marginLeft="@dimen/qb_px_240"
    android:layout_marginRight="@dimen/qb_px_240"
    android:layout_marginBottom="@dimen/qb_px_10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/update_linear"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_inmo_os"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/qb_px_64"
        android:layout_marginTop="@dimen/qb_px_62"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/img_inmo_os" />

    <TextView
        android:id="@+id/text_inmo_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/qb_px_36"
        android:layout_marginTop="@dimen/qb_px_99"
        android:text="INMO OS 1.3"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/img_inmo_os"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_inmo_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/qb_px_36"
        android:layout_marginTop="@dimen/qb_px_16"
        android:text="V1.1.2 | 稳定版"
        android:textColor="#54FFFFFF"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/img_inmo_os"
        app:layout_constraintTop_toBottomOf="@+id/text_inmo_x" />

    <TextView
        android:id="@+id/base_update_tx_log"
        android:layout_width="@dimen/qb_px_358"
        android:layout_height="@dimen/qb_px_96"
        android:layout_marginTop="@dimen/qb_px_64"
        android:layout_marginEnd="@dimen/qb_px_64"
        android:text="@string/app_view_log"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:gravity="center"
        android:background="@drawable/ic_full_log"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:visibility="visible"
        android:id="@+id/pb_progress1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/qb_px_664"
        android:layout_height="@dimen/qb_px_96"
        android:background="@drawable/download_updates"
        android:progressDrawable="@drawable/bg_progressbar"
        android:layout_marginBottom="@dimen/qb_px_64"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:visibility="visible"
        android:id="@+id/text_change_download_updates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_download_updates"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/pb_progress1"
        app:layout_constraintEnd_toEndOf="@+id/pb_progress1"
        app:layout_constraintStart_toStartOf="@+id/pb_progress1"
        app:layout_constraintTop_toTopOf="@+id/pb_progress1" />

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pb_progress2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/qb_px_664"
        android:layout_height="@dimen/qb_px_96"
        android:background="@drawable/download_updates"
        android:progressDrawable="@drawable/bg_progressbar"
        android:layout_marginBottom="@dimen/qb_px_64"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:visibility="gone"
        android:id="@+id/text_restart_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_restart_update_now"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/pb_progress2"
        app:layout_constraintEnd_toEndOf="@+id/pb_progress2"
        app:layout_constraintStart_toStartOf="@+id/pb_progress2"
        app:layout_constraintTop_toTopOf="@+id/pb_progress2" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/base_update_scrollew"
        android:layout_marginStart="@dimen/qb_px_45"
        android:layout_marginTop="@dimen/qb_px_320"
        android:layout_marginEnd="@dimen/qb_px_64"
        android:layout_marginBottom="@dimen/qb_px_208"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="@dimen/qb_px_45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sc_tv_log"
                android:textSize="14sp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </ScrollView>

